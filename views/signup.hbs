<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="css/signuppagestylesheet.css">
    <script>
        function donarSelectOption() {
            var typeofDonarValue = document.getElementById("typeOfDonarSelect").value
            var additionalDiv = document.getElementById("onSelectRegularDonar")
            var frequencyOfDonor = document.getElementById("howFrequentlyWantToDonate")

            if (typeofDonarValue === "regular") {
                additionalDiv.style.display = "flex"
                frequencyOfDonor.setAttribute('required', '')
            } else {
                additionalDiv.style.display = "none"
                frequencyOfDonor.removeAttribute('required')
            }
        }

        function frequencyOfDonation() {
            var frequency = document.getElementById("howFrequentlyWantToDonate").value
            var resultOfDays = document.getElementById("specificDays")
            var resultOfDate = document.getElementById("specificDate")
            var timing = document.getElementById("time")

            if (frequency === "daily") {
                resultOfDays.style.display = "block"
                resultOfDate.style.display = "none"
                time.style.display = "block"
            } else if (frequency === "weekly") {
                resultOfDays.style.display = "block"
                resultOfDate.style.display = "none"
                time.style.display = "block"
            } else if (frequency === "monthly") {
                resultOfDays.style.display = "none"
                resultOfDate.style.display = "block"
                time.style.display = "block"
            }
        }

        function buttonColourChange() {
            var id = document.getElementById("saveAndProceedButton")
            id.style.border.width = "3px"
            id.style.border.borderStyle = "solid"
            id.style.border.color = "#8ac926"
            id.style.color = "#8ac926"
            id.style.backgroundColor = "#001d3d"
        }
    </script>
</head>

<body id="body">
    <navbar id="navigationBar" class="body">
        <div id="navigationBarFirst">
            <div id="siteName" class="navigationBarFirst"> zerohunger.com </div>
        </div>
        <div id="navigationBarSecond">
            <button id="logInButton" class="navigationBarSecond">
                <a href="/login">Log In</a>
            </button>
        </div>
    </navbar>

    <div id="createAccountDialougeBox">
        <div class="createAccountDialougeBox">
            <div id="headline" class="createAccountDialougeBoxElement">
                <span id="heading">Create New Account</span>
            </div>
            <form action="/signup" method="post">
                <div id="userData">
                    <div id="contactData">
                        <div id="usersname" class="userContactData"><input name="name" type="text" placeholder="Name"
                                autocomplete="off" required></div>
                        <div id="email" class="userContactData"><input name="email" type="email"
                                placeholder="E-mail Address" autocomplete="off" required></div>
                        <div id="setusername" class="userContactData"><input name="username" type="text"
                                placeholder="Enter a Username" autocomplete="off" required></div>
                        <div id="phoneNumber" class="userContactData"><input name="phone" type="tel" pattern="[0-9]{10}"
                                placeholder="Mobile No. (without initials)" autocomplete="off" required></div>
                    </div>
                    <br>
                    <div id="addressData">
                        <div id="addressDataOne" class="addressData">
                            <div id="inputAddress"><input name="address" type="text" placeholder="Address" autocomplete="off" required></div>
                            <div id="city"><input name="city" type="text" placeholder="City" id="inputCity" autocomplete="off" required>
                            </div>
                            <div id="district"><input name="district" type="text" placeholder="District" id="inputDistrict"
                                    autocomplete="off" required></div>
                        </div>
                        <div id="addressDataTwo" class="addressData">
                            <div id="pinCode"><input name="pincode" type="text" placeholder="Pincode" id="inputPinCode"
                                    autocomplete="off" required></input></div>
                            <div id="state"><input name="state" type="text" placeholder="State" id="inputState" autocomplete="off" required>
                            </div>
                            <div id="country"><input name="country" type="text" placeholder="Country" id="inputcountry"
                                    autocomplete="off" required></div>
                        </div>
                    </div>
                </div>
                <br>
                <div id="typeOfDonar">
                    <select name="typeOfDonar" id="typeOfDonarSelect" onchange="donarSelectOption()" required>
                        <option value="" disabled selected hidden>What Kind of Donar You are?</option>
                        <option value="regular">Regular</option>
                        <option value="occasional">Occasional</option>
                    </select>
                </div>
                <br>
                <div id="onSelectRegularDonar" style="display: none;">
                    <select name="frequencyOfDonation" id="howFrequentlyWantToDonate" onchange="frequencyOfDonation()">
                        <option value="" selected hidden>How Often Do You Want To Donate?</option>
                        <option value="daily">Daily</option>
                        <option value="weekly">Weekly</option>
                    </select>
                    <div id="specificDays" style="display: none;">
                        <input name="noOfDays" id="sunday" class="specificDays" type="checkbox">
                        <label for="sunday"> Sunday</label>

                        <input name="noOfDays" id="monday" class="specificDays" type="checkbox">
                        <label for="monday"> Monday</label>

                        <input name="noOfDays" id="tuesday" class="specificDays" type="checkbox">
                        <label for="tuesday"> Tuesday</label>

                        <input name="noOfDays" id="wednesday" class="specificDays" type="checkbox">
                        <label for="wednesday"> Wednesday </label>

                        <input name="noOfDays" id="thursday" class="specificDays" type="checkbox">
                        <label for="thursday"> Thursday</label>

                        <input name="noOfDays" type="checkbox" class="specificDays" id="friday">
                        <label for="friday"> Friday</label>

                        <input name="noOfDays" type="checkbox" class="specificDays" id="saturday">
                        <label for="saturday"> Saturday </label>
                    </div>
                    <div id="specificDate" style="display: none;">
                        <input type="date" placeholder="Select Date">
                    </div>
                </div>

                <div class="time">
                    <select name="time" id="time" style="display: none;">
                        <option value="" disabled hidden selected>When You want to Donate?</option>
                        <option value="morning">Morning (10 am)</option>
                        <option value="afternoon">Afternoon (12 pm)</option>
                        <option value="night">Night (8 pm)</option>
                    </select>
                </div>
                <div id="saveAndProceed">
                    <button type="submit" id="saveAndProceedButton" onclick="buttonColourChange()">
                        Save and Proceed
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
<footer id="footer">
    <div id="footerData">
        <div id="aboutUs" class="footerData"><a href="">About Us</a></div>
        <div id="contactUs" class="footerData"><a href="">Contact Us</a></div>
    </div>
</footer>

</html>